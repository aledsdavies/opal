# Devcmd Development Commands
# Showcasing real-world usage of our own tool

# =============================================================================
# PROJECT CONFIGURATION
# =============================================================================

def PROJECT = devcmd;
def GRAMMAR_DIR = grammar;
def GEN_DIR = internal/gen;
def VERSION = $(git describe --tags --always --dirty 2>/dev/null || echo 'dev');
def BUILD_TIME = $(date -u +%Y-%m-%dT%H:%M:%SZ);

# =============================================================================
# CORE DEVELOPMENT
# =============================================================================

# Project setup and initialization
setup: {
    echo "ðŸ”§ Setting up devcmd development environment...";
    dev grammar;
    go mod download;
    go mod verify;
    echo "âœ… Ready to develop!";
}

# Generate ANTLR parser
grammar: {
    echo "ðŸ“ Generating ANTLR parser...";
    rm -rf @var(GEN_DIR);
    mkdir -p @var(GEN_DIR);
    @sh(cd @var(GRAMMAR_DIR) && antlr4 -Dlanguage=Go -package gen -listener -visitor -o ../@var(GEN_DIR) DevcmdLexer.g4 DevcmdParser.g4);
    echo "âœ… Parser generated";
}

# Build the CLI
build: {
    echo "ðŸ”¨ Building @var(PROJECT) @var(VERSION)...";
    @sh(if [ ! -f @var(GEN_DIR)/devcmd_lexer.go ]; then dev grammar; fi);
    go build -ldflags="-s -w -X main.Version=@var(VERSION) -X main.BuildTime=@var(BUILD_TIME)" -o @var(PROJECT) ./cmd/@var(PROJECT);
    echo "âœ… Built: ./@var(PROJECT)";
}

# Run tests
test: {
    echo "ðŸ§ª Running tests...";
    @sh(if [ ! -f @var(GEN_DIR)/devcmd_lexer.go ]; then dev grammar; fi);
    go test ./...;
}

# Run tests with coverage
cover: {
    echo "ðŸ“Š Running tests with coverage...";
    go test -race -coverprofile=coverage.out -covermode=atomic ./...;
    go tool cover -html=coverage.out -o coverage.html;
    echo "ðŸ“Š Coverage report: coverage.html";
}

# Format code
fmt: {
    echo "ðŸ“ Formatting code...";
    @parallel: {
        @sh(if command -v gofumpt >/dev/null; then gofumpt -w .; else go fmt ./...; fi);
        @sh(if command -v nixpkgs-fmt >/dev/null; then find . -name '*.nix' -exec nixpkgs-fmt {} +; fi);
    };
    echo "âœ… Code formatted";
}

# Run linters
lint: {
    echo "ðŸ” Running linters...";
    @sh(if command -v golangci-lint >/dev/null; then golangci-lint run --timeout=5m; else go vet ./...; fi);
    echo "âœ… Linting complete";
}

# Quick checks (format + lint)
check: {
    echo "âš¡ Running quick checks...";
    dev fmt;
    dev lint;
    echo "âœ… Quick checks passed";
}

# Clean build artifacts
clean: {
    echo "ðŸ§¹ Cleaning build artifacts...";
    rm -f @var(PROJECT) coverage.out coverage.html;
    rm -rf result result-*;
    go clean -cache -testcache;
    echo "âœ… Cleanup complete";
}

# =============================================================================
# NIX INTEGRATION
# =============================================================================

# Build Nix packages
nix-build: {
    echo "ðŸ“¦ Building Nix packages...";
    nix build .#@var(PROJECT) --print-build-logs;
    echo "âœ… Nix packages built";
}

# Build example CLIs
examples: {
    echo "ðŸŽ¯ Building example CLIs...";
    @parallel: {
        nix build .#basicDev --print-build-logs;
        nix build .#webDev --print-build-logs;
        nix build .#goProject --print-build-logs;
    };
    @parallel: {
        nix build .#rustProject --print-build-logs;
        nix build .#dataScienceProject --print-build-logs;
        nix build .#devOpsProject --print-build-logs;
    };
    echo "âœ… All example CLIs built";
}

# Test example CLIs
test-examples: {
    echo "ðŸ§ª Testing example CLIs...";
    dev examples;
    @parallel: {
        @sh(nix run .#basicDev -- --help >/dev/null && echo "âœ… basicDev OK" || echo "âŒ basicDev failed");
        @sh(nix run .#webDev -- --help >/dev/null && echo "âœ… webDev OK" || echo "âŒ webDev failed");
        @sh(nix run .#goProject -- --help >/dev/null && echo "âœ… goProject OK" || echo "âŒ goProject failed");
    };
    echo "âœ… Example testing complete";
}

# Run Nix tests
nix-test: {
    echo "ðŸ§ª Running Nix tests...";
    nix build .#tests --print-build-logs;
    echo "âœ… Nix tests complete";
}

# Comprehensive Nix validation
nix-check: {
    echo "ðŸ” Running comprehensive Nix validation...";
    nix flake check --print-build-logs;
    echo "âœ… Nix validation passed";
}

# =============================================================================
# DEVELOPMENT WORKFLOWS
# =============================================================================

# Development workflow (fast iteration)
dev-flow: {
    echo "ðŸ”„ Running development workflow...";
    dev setup;
    dev check;
    dev test;
    dev build;
    echo "âœ… Development workflow complete";
}

# CI workflow (comprehensive testing)
ci: {
    echo "ðŸ”„ Running CI workflow...";
    echo "Stage 1: Format & Lint...";
    dev check;
    echo "Stage 2: Go Tests...";
    dev cover;
    echo "Stage 3: Build...";
    dev build;
    echo "Stage 4: Nix Tests...";
    dev nix-test;
    echo "Stage 5: Examples...";
    dev test-examples;
    echo "ðŸŽ‰ CI workflow complete";
}

# Release preparation
release: {
    echo "ðŸ“¦ Preparing release...";
    dev clean;
    dev ci;
    dev nix-check;
    echo "ðŸ“‹ Release checklist:";
    echo "  âœ… All tests passed";
    echo "  âœ… Code formatted";
    echo "  âœ… Nix packages validated";
    echo "  âœ… Example CLIs working";
    echo "ðŸš€ Ready for release";
}

